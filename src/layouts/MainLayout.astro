---
interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'ระบบสต็อคของชำร่วย (Admin)',
  description = 'ระบบจัดการสต็อคของชำร่วย'
} = Astro.props;
---

<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Sarabun:wght@300;400;600;700&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body class="bg-gray-50 text-gray-800 font-sans">
    <slot />
    <footer class="text-center py-4 text-gray-500 text-sm flex items-center justify-center">
      <img src="/STC-LOGO-RGB.svg" alt="STC Logo" style="width:100px;height:auto;margin-right:12px;" />
      <span style="font-size:1.1em">&copy; 2026 All Right Reserved isuzu-stc.com</span>
    </footer>
</body>
</html>

<style is:global>
    body {
        font-family: 'Sarabun', sans-serif;
    }
</style>
